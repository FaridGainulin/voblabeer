.start-section
  background-image: url("../images/start-section-bg.jpg")
  background-repeat: no-repeat
  background-position: top
  background-size: 800px auto
  +above($breakpoints.sm)
    background-size: auto
  
  &__container
    padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 100px 0 82px 0

  &__title
    text-align: center
    width 100%
    max-width: 792px
    margin: 0 auto
    color: black
    background-color #fff
    border-radius: 92px
    padding 18px 10px 14px 10px
    margin-bottom 40px
    +above($breakpoints.sm)
      margin-bottom 80px
      padding 43px 57px 29px 57px

  &__arrow
    margin 0 auto

  &__arrow-padding
    padding: 0 0 6px 0
    +above($breakpoints.sm)
      padding: 0 0 55px 0
    +above($breakpoints.md)
      padding: 0 0 37px 0

  &__cards
    color #593C06
    +above($breakpoints.md)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content center
      gap: 20px
    +above($breakpoints.xxl)
      justify-content start

  &__card
    width 300px
    height: 198px
    padding: 20px 30px 30px 30px
    border-bottom: 1px solid #2E241A
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    +above($breakpoints.md)
      width 276px !important

  &__card-inner
    display: flex
    flex-direction: column
    gap: 15px

  &__bottom
    margin-top 20px
    position relative
    background-color #543B32
    border-radius: 15px
    padding 20px 0 3px 0
    display: flex
    flex-direction: column
    +above($breakpoints.sm)
      padding 27px 0 27px 0
      gap 10px
      flex-direction: row
    +above($breakpoints.md)
      margin-top 55px
      justify-content center
      gap 74px
    +above($breakpoints.xxl)
      justify-content start


  &__desc
    padding 15px 20px 20px 30px
    +above($breakpoints.sm)
      padding 23px 0 23px 62px

  &__bottom-title
    padding-left 30px
    +above($breakpoints.sm)
      padding-top 47px
      padding-left 62px

  &__form
    width 300px
    padding 28px 30px
    margin 0 auto
    border-radius: 15px
    background-color #654f47
    +above($breakpoints.sm)
      margin 0

  &__btn
    padding 45px 0

  &__input
    padding 15px 0 10px 0

  &__prizm
    display: none
    +above($breakpoints.xxl)
      display: block
      position: absolute
      bottom: 0
      right: -3px

  &__blanks
    display: none
    +above($breakpoints.xxl)
      display: block
      position: absolute
      bottom: 0
      right: -55px
