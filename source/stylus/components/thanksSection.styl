.thanks-section
  height: 100%
  background-image: url("../images/main-section-bg.jpg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  .wrapper
    height: 100%
    display: flex
    flex-direction: column
    justify-content: space-between

  &__container
    padding 60px 0 80px 0
    max-width: 825px
    margin: 0 auto
    text-align: center
    +above($breakpoints.sm)
      padding 188px 0

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto

  &__header
    padding 32px 0

  &__text
    width 150px
    padding-left 10px
    border-left: 1px solid rgb(255, 255, 255)
    color: rgb(255, 255, 255)
    +above($breakpoints.sm)
      width 170px
      padding-left 25px
