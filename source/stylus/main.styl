@font-face
  font-family: "Cunia-Bold"
  src: url('../fonts/Cunia-Bold.woff'), url('../fonts/Cunia-Bold.woff2')
  font-display: swap

@font-face
  font-family: "Rubik-Bold"
  src: url('../fonts/Rubik-Bold.woff'), url('../fonts/Rubik-Bold.woff2')
  font-display: swap

@font-face
  font-family: "Rubik-Regular"
  src: url('../fonts/Rubik-Regular.woff'), url('../fonts/Rubik-Regular.woff2')
  font-display: swap



@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Rubik-Regular"
  font-weight: 400
  line-height: 130%
  color $color-white

.mark
  color: #F6CA52
  background-color: inherit

.mark2
  color: #F7D046
  background-color: inherit

.mark4
  color: #F7D046
  background-color: inherit

.mark-linear
  background: linear-gradient(90deg, #f7d046, #f4b83f);
  border-radius: 19px;
  padding: 0 10px 0px 10px;
  display: inline-block;
  line-height: 120%;
  +above($breakpoints.sm)
    padding: 0 20px 0px 20px;
.mark5
  color #FFD001

.mark6
  color #f4b83f

.mark3
  color: #f6ca52
  background-color: inherit

.mark-bg
  background-color: #543b32;
  border-radius: 10px;
  color: #f6ca52;
  padding: 0 10px 0px 10px;
  display: inline-block;
  line-height: 120%;

.mark-bg-main
  background-color: #543b32;
  border-radius: 10px;
  color: #f6ca52;
  padding: 5px 10px
  display: inline-block;
  line-height: 120%;
  +above($breakpoints.sm)
    padding: 0 10px 0px 10px;

.mark-bg2
  background-color: #80632d
  border-radius: 23px;
  color: #F6CA52
  padding: 0 10px 0px 10px;
  display: inline-block;
  line-height: 120%;

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

br
  display: none
  +above($breakpoints.sm)
    display: block


.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1220px

.wrapper-presentation
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1320px

.wrapper-invest
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1720px

.main
  flex: 1

.form-column
  display: flex
  flex-direction: column
  width 100%
  max-width: 320px
  margin: 0 auto
  gap: 9px
  +above($breakpoints.md)
    margin 0

.form-row
  display: flex
  flex-direction: column
  gap: 20px
  align-items: center
  +above($breakpoints.sm)
    flex-direction: row
    justify-content: center
  +above($breakpoints.md)
    gap: 40px

